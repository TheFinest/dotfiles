set termguicolors
set t_Co=256
set background=dark
colorscheme strawberry-light

filetype plugin on
syntax on

set smartindent

set backspace=indent,eol,start " backspace over everything in insert mode

nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz

set number
set relativenumber

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set guicursor=

set scrolloff=8
